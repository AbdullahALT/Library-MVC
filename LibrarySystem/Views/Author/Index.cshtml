@model IEnumerable<LibrarySystem.Models.Author>

@{
    ViewBag.Title = "Authors List";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialty)
        </th>
        <th>
            Number of Books
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Image != null)
            {
                <img src="@Url.Content(item.Image)" alt="Author Picture" height="100" width="80" class="img-responsive" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Specialty)
        </td>
        <td>
            @item.Books.Count
        </td>
        <td>
            <p class="right">
                @Html.ActionLink("Details", "Details", new { id = item.AuthorId }, new { @class = "btn btn-default" })
                @Html.ActionLink("Edit", "Edit", new { id = item.AuthorId }, new { @class = "btn btn-default" })
                
            </p>
        </td>
        
    </tr>
}

</table>

<hr />
@Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success" })