@model IEnumerable<LibrarySystem.Models.Book>

@{
    ViewBag.Title = "Books List";
}

<h2>@ViewBag.Title</h2>


<table class="table table-hover table-condensed">
    <tr>
        <th>
            Image
        </th>
        <th>
            Title
        </th>
        <th>
            Type
        </th>
        <th>
            Writer
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Image != null)
            {
                <img src="@Url.Content(item.Image)" alt="Book Cover" height="100" width="80" class="img-responsive" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author.Name)
        </td>
        <td>
            <p class="right">
                @Html.ActionLink("Details", "Details", new { id = item.BookId }, new { @class = "btn btn-default" })
                @Html.ActionLink("Edit", "Edit", new { id = item.BookId }, new { @class = "btn btn-default" })
                @Html.ActionLink("Delete", "Delete", new { id = item.BookId }, new { @class = "btn btn-danger" })
            </p>
            
        </td>
    </tr>
}

</table>

<p class="right">
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success" })
</p>

